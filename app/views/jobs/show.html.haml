%p#notice= notice
.job_show
	.job_header

		.show_job_title
			= @job.title
		.company_name
			= @job.company_name
		.user
			-if user_signed_in?
				Posted by
				= @job.user.first_name
				= @job.user.last_name
				= @job.user.email
	.job_date
		POSTED ON
		%br
		= @job.created_at

	%p.job_description
		= @job.description
	= link_to 'Show More', @job.details_link, :class => "details_link"

	.job_links
		= link_to 'Edit', edit_job_path(@job)
		|
		= link_to 'Back', jobs_path
