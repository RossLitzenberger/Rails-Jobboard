%ul
  - @jobs.each do |job|
    %li
    = link_to(job) do
      %strong.job_title
        = job.title
      %span.description
        = job.description
      = link_to 'Edit', edit_job_path(job)
      = link_to 'Destroy', job, :method => :delete, :data => { :confirm => 'Dont do it! It will hurt my feeling. :(' }

= link_to 'New Job', new_job_path
